<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.electricdroid.renaissance.SplashEvents">

    <include
        android:id="@+id/app_bar"
        layout="@layout/app_bar" />

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardBackgroundColor="@android:color/background_light"
        card_view:cardElevation="@dimen/dimen_elevation"
        card_view:cardCornerRadius="2dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_margin="5dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/adaaTv"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_for_event_buttons"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/margin_for_event_buttons"
                    android:background="@color/cyan_800"
                    android:clickable="true"
                    android:gravity="center"
                    android:text="Adaa"
                    android:textSize="@dimen/textSize_for_event_buttons"
                    android:elevation="@dimen/dimen_elevation"

                    />
                <TextView
                    android:id="@+id/anuprasTv"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_for_event_buttons"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/margin_for_event_buttons"
                    android:background="@color/cyan_800"
                    android:clickable="true"
                    android:gravity="center"
                    android:text="Anupras"
                    android:textSize="@dimen/textSize_for_event_buttons"
                    android:elevation="@dimen/dimen_elevation" />
                <TextView
                    android:id="@+id/bootstrappingTv"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_for_event_buttons"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/margin_for_event_buttons"
                    android:background="@color/cyan_700"
                    android:clickable="true"
                    android:gravity="center"
                    android:text="Boot Strapping"
                    android:textSize="@dimen/textSize_for_event_buttons"
                    android:elevation="@dimen/dimen_elevation" />

                <TextView
                    android:id="@+id/nukkadnatakTv"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_for_event_buttons"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/margin_for_event_buttons"
                    android:background="@color/cyan_600"
                    android:clickable="true"
                    android:gravity="center"
                    android:text="Nukkad Natak"
                    android:textSize="@dimen/textSize_for_event_buttons"
                    android:elevation="@dimen/dimen_elevation" />

                <TextView
                    android:id="@+id/raganightTv"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_for_event_buttons"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/margin_for_event_buttons"
                    android:background="@color/cyan_600"
                    android:clickable="true"
                    android:gravity="center"
                    android:text="Raga Night"
                    android:textSize="@dimen/textSize_for_event_buttons"
                    android:elevation="@dimen/dimen_elevation" />

                <TextView
                    android:id="@+id/rockathonTv"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_for_event_buttons"

                    android:layout_gravity="center"
                    android:layout_margin="@dimen/margin_for_event_buttons"
                    android:background="@color/cyan_500"
                    android:clickable="true"
                    android:gravity="center"
                    android:text="Rock'athon"
                    android:textSize="@dimen/textSize_for_event_buttons"
                    android:elevation="@dimen/dimen_elevation" />

                <TextView
                    android:id="@+id/stepupTv"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_for_event_buttons"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/margin_for_event_buttons"
                    android:background="@color/cyan_400"
                    android:clickable="true"
                    android:gravity="center"
                    android:text="Step Up"
                    android:textSize="@dimen/textSize_for_event_buttons"
                    android:elevation="@dimen/dimen_elevation" />

                <TextView
                    android:id="@+id/vinylwarTv"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_for_event_buttons"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/margin_for_event_buttons"
                    android:background="@color/cyan_400"
                    android:clickable="true"
                    android:gravity="center"
                    android:text="Vinyl War"
                    android:textSize="@dimen/textSize_for_event_buttons"
                    android:elevation="@dimen/dimen_elevation" />


            </LinearLayout>
        </ScrollView>
    </android.support.v7.widget.CardView>

</LinearLayout>
