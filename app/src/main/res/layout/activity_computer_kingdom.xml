<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.electricdroid.renaissance.SplashEvents">

    <include
        android:id="@+id/app_bar"
        layout="@layout/app_bar" />

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardBackgroundColor="@android:color/background_light"
        card_view:cardElevation="@dimen/dimen_elevation"
        card_view:cardCornerRadius="2dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_margin="5dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_gravity="center">


                <TextView
                    android:id="@+id/javaletsTv"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_for_event_buttons"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/margin_for_event_buttons"
                    android:background="@color/cyan_800"
                    android:clickable="true"
                    android:gravity="center"
                    android:text="Java Lets"
                    android:textSize="@dimen/textSize_for_event_buttons"
                    android:elevation="@dimen/dimen_elevation"

                    />
                <TextView
                    android:id="@+id/justcTv"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_for_event_buttons"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/margin_for_event_buttons"
                    android:background="@color/cyan_700"
                    android:clickable="true"
                    android:gravity="center"
                    android:text="Just C"
                    android:textSize="@dimen/textSize_for_event_buttons"
                    android:elevation="@dimen/dimen_elevation" />
                <TextView
                    android:id="@+id/steptostockTv"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_for_event_buttons"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/margin_for_event_buttons"
                    android:background="@color/cyan_600"
                    android:clickable="true"
                    android:gravity="center"
                    android:text="Step To Stock"
                    android:textSize="@dimen/textSize_for_event_buttons"
                    android:elevation="@dimen/dimen_elevation" />

                <TextView
                    android:id="@+id/caddmaniaTv"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_for_event_buttons"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/margin_for_event_buttons"
                    android:background="@color/cyan_500"
                    android:clickable="true"
                    android:gravity="center"
                    android:text="Cadd Mania"
                    android:textSize="@dimen/textSize_for_event_buttons"
                    android:elevation="@dimen/dimen_elevation" />

                <TextView
                    android:id="@+id/subitoTv"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_for_event_buttons"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/margin_for_event_buttons"
                    android:background="@color/cyan_400"
                    android:clickable="true"
                    android:gravity="center"
                    android:text="Algoholic"
                    android:textSize="@dimen/textSize_for_event_buttons"
                    android:elevation="@dimen/dimen_elevation" />

            </LinearLayout>
        </ScrollView>
    </android.support.v7.widget.CardView>

</LinearLayout>
