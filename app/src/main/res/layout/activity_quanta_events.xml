<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.electricdroid.renaissance.QuantaEvents">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            android:id="@+id/app_bar"
            layout="@layout/app_bar" />

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            card_view:cardBackgroundColor="@android:color/background_light"
            card_view:cardCornerRadius="2dp"
            card_view:cardElevation="@dimen/dimen_elevation">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_margin="7dp"
                    android:orientation="vertical">


                    <TextView
                        android:id="@+id/constructoTv"
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:layout_gravity="center"
                        android:layout_margin="10dp"
                        android:background="@color/cyan_700"
                        android:clickable="true"
                        android:elevation="@dimen/dimen_elevation"
                        android:gravity="center"
                        android:text="Constructo"
                        android:textColor="@android:color/white"
                        android:textSize="16sp"

                        />


                    <TextView
                        android:id="@+id/computerKingdomTv"
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:layout_gravity="center"
                        android:layout_margin="10dp"
                        android:background="@color/cyan_600"
                        android:clickable="true"
                        android:elevation="@dimen/dimen_elevation"
                        android:gravity="center"
                        android:text="Carriage Return"
                        android:textColor="@android:color/white"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/robofiestaTv"
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:layout_gravity="center"
                        android:layout_margin="10dp"
                        android:background="@color/cyan_500"
                        android:clickable="true"
                        android:elevation="@dimen/dimen_elevation"
                        android:gravity="center"
                        android:text="Robo Fiesta"
                        android:textColor="@android:color/white"
                        android:textSize="16sp" />


                </LinearLayout>
            </ScrollView>
        </android.support.v7.widget.CardView>


    </LinearLayout>

</RelativeLayout>
